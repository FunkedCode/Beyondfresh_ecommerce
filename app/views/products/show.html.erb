<div class="columns">
  <div class="column">
    <% if @product.image.attached? %>
      <%= image_tag @product.image.attachment, alt: 'product image' %>
    <% else %>
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    <% end%>
  </div>
  <div class="column">
    <h2><%=@product.title%></h2>
    <p>Price:<strong><%= @product.price%></strong></p>
    <p><%=@product.description%></p>
    <p><%=@product.serving_size%></p>
    <br/>
    <ul>
      <% @product.ingredient_list.split(',').each do |ingredient|%>
        <li><%= ingredient%></li>
      <% end %>
    </ul>
  </div>
</div>